package colores;

/**
 * Coloreado de texto
 *
 * muestra varias palabras en color que corresponde
 *
 * @author Amarico
 */
public class Colores {

  /**
   * @param args the command line arguments
   */
  public static void main(String[] args) {
    // TODO code application logic here

    // Declaro variables tipo String para los colores
    String rojo = "\033[31m";

    String verde = "\033[32m";

    String naranja = "\033[33m";

    String azul = "\033[34m";

    String morado = "\033[35m";

    String blanco = "\033[37m";
    
    // Imprimo los colores por pantalla
    
    System.out.print(naranja + " mandarina" + verde + " hierba");
    
    System.out.print(naranja + " saltamontes " + rojo + " tomate");
    
    System.out.print(blanco + " s√°banas" + azul + " cielo");
    
    System.out.print(morado + " nazareno" + azul + " hierba");
    
    

  }

}
